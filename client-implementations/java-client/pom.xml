            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <targetJdk>1.7</targetJdk>
        <exec.mainClass>se.cygni.texasholdem.player.FullyImplementedBot</exec.mainClass>
    </properties>

    <dependencies>

        <dependency>
            <groupId>se.cygni</groupId>
            <artifactId>texas-holdem-common</artifactId>
        </dependency>

        <dependency>
            <groupId>se.cygni</groupId>
            <artifactId>texas-holdem-client</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
        </dependency>

        <!-- Logging (SLF4J and Logback) -->
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>log4j-over-slf4j</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jul-to-slf4j</artifactId>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!--
         This profile is just for packaging and deploying on
         the CI-server. If you are developing a java-bot you
         can disregard this section. It is only activated by
         the profile: production
     -->
    <profiles>
        <profile>
            <id>production</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <!-- Packages this project in a zip for download -->
                                <id>copy-downloadable-artifacts</id>
                                <phase>deploy</phase>
                                <configuration>
                                    <target>
                                        <mkdir dir="${basedir}/target/zip/${project.name}-${project.version}" />
                                        <copy todir="${basedir}/target/zip/${project.name}-${project.version}">
                                            <fileset dir="${basedir}">
                                                <include name="**" />
                                                <exclude name="**/.idea/**" />
                                                <exclude name="**/.git/**" />
                                                <exclude name="**/target/**" />
                                                <exclude name="**/*.iml" />
                                            </fileset>
                                        </copy>

                                        <zip destfile="${public.web.dir}/download/${project.name}-${project.version}.zip" encoding="UTF-8">
                                            <fileset dir="${basedir}/target/zip">
                                                <include name="**" />
                                            </fileset>
                                        </zip>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>

        </profile>

    </profiles>

    <repositories>
        <repository>
            <id>poker.cygni.s</id>
            <url>http://poker.cygni.se/maven2</url>
        </repository>
    </repositories>
</project>
